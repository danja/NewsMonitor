<div id="_mcePaste" style="position:absolute;left:-10000px;top:0;width:1px;height:1px;"><span style="white-space:pre;"> </span>&lt;foaf:gender&gt;male&lt;/foaf:gender&gt;</div>
<div id="_mcePaste" style="position:absolute;left:-10000px;top:0;width:1px;height:1px;"><span style="white-space:pre;"> </span>&lt;openp:politicalGroup rdf:resource=&#8221;<a href="http://openparlamento.it/groups/Democratic_Party&#8221;/&#038;gt" rel="nofollow">http://openparlamento.it/groups/Democratic_Party&#8221;/&#038;gt</a>;</div>
<div id="_mcePaste" style="position:absolute;left:-10000px;top:0;width:1px;height:1px;"><span style="white-space:pre;"> </span>&lt;owl:sameas rdf:resource=&#8221;<a href="http://dbpedia.org/resource/Mario_Rossi&#8221;/&#038;gt" rel="nofollow">http://dbpedia.org/resource/Mario_Rossi&#8221;/&#038;gt</a>;</div>
